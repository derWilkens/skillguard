<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="eu.skillguard.web.certificate.CertificateBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="eu.skillguard.web.certificate">
    <dsContext>
        <datasource id="certificateDs"
                    class="eu.skillguard.entity.Certificate"
                    view="certificate-view"/>
        <groupDatasource id="certificatesDs"
                         class="eu.skillguard.entity.Certificate"
                         view="certificate-view">
            <query>
                <![CDATA[select e from skillguard$Certificate e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="qualificationTypesDs"
                              class="eu.skillguard.entity.CertificateType"
                              view="_minimal">
            <query>
                <![CDATA[select e from skillguard$CertificateType e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="employeesDs"
                              class="eu.skillguard.entity.Employee"
                              view="_minimal">
            <query>
                <![CDATA[select e from skillguard$Employee e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="fileDatasDs"
                              class="com.haulmont.cuba.core.entity.FileDescriptor"
                              view="_minimal">
            <query>
                <![CDATA[select e from sys$FileDescriptor e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="certificatesDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="issuingDate"/>
                        <column id="expirationDate"/>
                        <column id="verfiedBy"/>
                        <column id="qualificationType"/>
                        <column id="employee"/>
                        <column id="fileData"/>
                    </columns>
                    <rows datasource="certificatesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="certificateDs">
                        <column width="250px">
                            <field property="issuingDate"/>
                            <field property="expirationDate"/>
                            <field property="verfiedBy"/>
                            <field optionsDatasource="qualificationTypesDs"
                                   property="qualificationType"/>
                            <field optionsDatasource="employeesDs"
                                   property="employee"/>
                            <field optionsDatasource="fileDatasDs"
                                   property="fileData"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
