<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="eu.skillguard.web.employee.EmployeeBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="eu.skillguard.web.employee">
    <dsContext>
        <datasource id="employeeDs"
                    class="eu.skillguard.entity.Employee"
                    view="employee-view"/>
        <collectionDatasource id="employeesDs"
                              class="eu.skillguard.entity.Employee"
                              view="employee-view">
            <query>
                <![CDATA[select e from skillguard$Employee e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="departmentsDs"
                              class="eu.skillguard.entity.Department"
                              view="_minimal">
            <query>
                <![CDATA[select e from skillguard$Department e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="employeesDs">
                    <properties include=".*"/>
                </filter>
                <table id="table"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="firstName"/>
                        <column id="lastName"/>
                        <column id="email"/>
                        <column id="department"/>
                    </columns>
                    <rows datasource="employeesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </table>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="employeeDs">
                        <column width="250px">
                            <field property="firstName"/>
                            <field property="lastName"/>
                            <field property="email"/>
                            <field optionsDatasource="departmentsDs"
                                   property="department"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
